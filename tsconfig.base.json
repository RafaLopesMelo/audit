{
    "compilerOptions": {
        "types": ["vitest/globals"],
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "esnext",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@audit/shared/*": ["packages/shared/src/*"]
        }
    },
    "exclude": ["node_modules", "**/dist"]
}
